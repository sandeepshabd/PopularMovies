<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandeepshabd.popularmovies">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movie_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movie_launcher"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ErrorActivity"
            android:parentActivityName=".activity.MovieListingActivity" />
        <activity
            android:name=".activity.MovieListingActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AboutActivity"
            android:parentActivityName=".activity.MovieListingActivity" />
        <activity
            android:name=".activity.TheaterActivity"
            android:parentActivityName=".activity.MovieListingActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>